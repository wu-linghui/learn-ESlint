{
  "root": true,
  "extends": [
    "eslint:recommended"
    // "plugin:eslint-plugin/recommended",
    // "plugin:node/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": { "mocha": true }
    }
  ],
  "plugins": [
    // "xxxxx" // 通过读取node_modules包里的eslint-plugins-xxxx/lib/rules下的自定义规则
  ],
  "rules": {
    "indent":[
      "error",
      2
    ],
    "linebreak-style":[
        "error",
        "unix"
    ],
    "quotes":[
        "error",
        "single"
    ],
    "semi":[
        "error",
        "never"
    ],
    "no-alert":"error",
    "no-unused-vars":"warn",
    "no-restricted-imports":[2,"lodash"],
    "eqeqeq":["error","always"],
    // "xxxx/find-deprecated":["error"], 
    "find-deprecated":["error"], // // 通过读取node_modules包里的eslint-plugins-xxxx/lib/rules下的自定义规则
    "find-todo":["error","fixme","todo"]
  }
}
