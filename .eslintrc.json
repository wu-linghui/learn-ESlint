{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:eslint-plugin/recommended",
    "plugin:node/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": { "mocha": true }
    }
  ],
  "rules": {
    "indent":[
      "error",
      2
    ],
    "linebreak-style":[
        "error",
        "unix"
    ],
    "quotes":[
        "error",
        "single"
    ],
    "semi":[
        "error",
        "never"
    ],
    "no-alert":"error",
    "no-unused-vars":"warn",
    "no-restricted-imports":[2,"lodash"],
    "eqeqeq":["error","always"],
    // "find-todo":["error","fixme","todo"],
    "find-deprecated":["error"]
  }
}
